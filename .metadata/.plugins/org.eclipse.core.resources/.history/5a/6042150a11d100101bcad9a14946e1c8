package fileHandling;

import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class File04 {

	public static void main(String[] args) throws IOException {
		
		// 01. CREATE Operation...
		File file = new File("JFS.txt");
		
		if (file.createNewFile()) {
			System.out.println(file.getName()+" is created...");
		} else {
			System.out.println("Failed to create "+file.getName());
		}
		
		// 02. Write Operation...
		
		FileWriter fw = new FileWriter(file);
		fw.write("File Handling Program...");
		System.out.println("File write operation..");
		fw.close();
		
		// 03. Read Operation...
		
		FileReader fr = new FileReader(file);
		int data = fr.read();

		while (data != -1) {
			System.out.print((char) data);
			data = fr.read();

		}
		fr.close();
		
		// 04. DELETE Operation..
		
		System.out.println("\nDelete operation..");
		if (file.exists()) {
			file.delete();
			System.out.println(file.getName()+" File Deleted Successfully..");
		} else {
			System.out.println("file not exist..!!");
		}

	}

}
